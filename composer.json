{
    "name": "itsfaqih/faspay",
    "description": "Unofficial Faspay SDK",
    "keywords": [
        "itsfaqih",
        "faspay"
    ],
    "homepage": "https://github.com/itsfaqih/faspay",
    "license": "MIT",
    "authors": [
        {
            "name": "Muhammad Faqih Muntashir",
            "email": "itsfaqih@ruine.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "guzzlehttp/guzzle": "^7.4",
        "myclabs/php-enum": "^1.8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "ItsFaqih\\Faspay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ItsFaqih\\Faspay\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
